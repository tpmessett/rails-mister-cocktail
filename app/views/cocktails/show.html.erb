<div class="container">
  <div class="row">
    <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5>How to make a <%= @cocktail.name %></h5>
            <% if @cocktail.description? %>
              <p><%= @cocktail.description %></p>
            <% else %>
              <p>There is no description on how to make a <%= @cocktail.name %> yet. Would you like to <%= link_to "add one", "/cocktails/#{@cocktail.id}/edit"%>?</p>
            <% end %>
            <p> To make a <%= @cocktail.name %> you will need:</p>
          </div>
        </div>
        <% @cocktail.doses.each do |dose| %>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= dose.description%> | <%= dose.ingredient.name %>
              <%= link_to dose_path(dose.id), method: :delete, data: {Confirm: "delete dose?"} do %>
              Delete</li>
              <% end %>
        <% end %>
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
            <li class="list-group-item"><button type="button" class="btn btn-outline-dark">Add to the <%= "#{@cocktail.name}" %> recipe</button></li>
            </ul>
        <%end%>
      </div>
    <div class="col-sm-6">
      <% if @cocktail.photo.attached? %>
                <%= cl_image_tag @cocktail.photo.key %>
              <% else %>
                 <div class="card">
                  <div class="card-body">
                    <p>There is no photo of a <%= @cocktail.name %> yet. Would you like to <%= link_to "add one", "/cocktails/#{@cocktail.id}/edit"%>?</p>
                  </div>
                </div>
              <% end %>
    </div>
  </div>
</div>

